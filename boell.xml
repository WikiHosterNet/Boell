<structure xmlns="https://cmln.github.io/chameleon/schema/1.0/layout.rng">

	<grid>

		<row>

			<cell span="12">

				<component type="container" class="boelltopcomp">
				</component>

			</cell>

		</row>

		<row>

			<cell span="1">

				<component type="container"/>

			</cell>

			<cell span="10">

				<component type="SiteNotice"/>

			</cell>

			<cell span="1">

				<component type="container"/>

			</cell>

		</row>

		<row class="boellheader">

			<cell span="4" class="boelllogocell">

				<component type="Logo" addLink="yes" class="boelllogocomp"/>

			</cell>

			<cell span="8">

				<row>
					<cell span="12">

						<component type="PersonalTools" hideNewtalkNotifier="yes" class="pull-right"/>

						<component type="NewtalkNotifier" class="pull-right"/>

					</cell>
				</row>

				<row class="boellsearch">

					<cell span="4">

						<component type="container"/>

					</cell>

					<cell span="8">

						<component type="SearchBar" class="pull-right" buttons="search"/>

					</cell>

				</row>

			</cell>

		</row>

		<row>

			<cell span="12">

				<component type="NavbarHorizontal">

				<component type="NavMenu" showTools="no" showLanguages="no"/>
				</component>

			</cell>

		</row>

		<row>

			<cell span="2">

				<component type="container"/>

			</cell>

			<cell span="10" class="boelltools">

				<component type="PageTools" hideSelectedNameSpace="yes" class="pull-right"/>

			</cell>

		</row>

		<row>

			<cell span="12">

				<component type="MainContent"/>

			</cell>

		</row>

		<row class="boelltoolbar">

			<cell span="1">

				<component type="container"/>

			</cell>

			<cell span="10">

				<component type="ToolbarHorizontal" hideTools="no" hideLanguages="yes" class="boelltoolbarcomp"/>
			</cell>

			<cell span="1">

				<component type="container"/>

			</cell>

		</row>

		<row class="boellfooter">

			<cell span="1">

				<component type="container"/>

			</cell>

			<cell span="10">

				<component type="container"/>

			</cell>

			<cell span="1">

				<component type="container"/>

			</cell>

		</row>

		<row class="boellfooterinfo">

			<cell span="1">

				<component type="container"/>

			</cell>

			<cell span="10">

				<component type="FooterInfo" class="boellfooterinfocomp">
				</component>

			</cell>

			<cell span="1">

				<component type="container"/>

			</cell>

		</row>

		<row class="boellfooterplaces">
		
			<cell span="1">

				<component type="container"/>

			</cell>

			<cell span="5">

				<component type="FooterPlaces"/>

			</cell>

			<cell span="5">

				<component type="FooterIcons"/>

			</cell>

			<cell span="1">

				<component type="container"/>

			</cell>

		</row>

	</grid>

</structure>
